<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\..\FrameXML\UI.xsd">

  <!-- The Movement Tracker -->
  
  <Frame name="DiceMasterMovementTracker" frameStrata="MEDIUM" parent="UIParent" hidden="true">
    
    <Size x="116" y="116"/>
    <Anchors>
      <Anchor point="CENTER" x="0" y="100"/>
    </Anchors>	
    <Layers>
      <Layer level="BACKGROUND">
        <Texture atlas="Ping_UnitMarker_BG_Attack">
          <Size x="116" y="116" />
          <Anchors>
            <Anchor point="CENTER" x="0" y="0"/>
          </Anchors>
        </Texture>
      </Layer>
      <Layer level="ARTWORK">
        <FontString inherits="GameFontNormalSmall" justifyH="CENTER" text="You moved">
			<Anchors>
				<Anchor point="TOP" x="0" y="-38"/>
			</Anchors>
		</FontString>
		<FontString parentKey="Text" inherits="GameFontHighlightLarge" justifyH="CENTER" text="0 yds">
			<Anchors>
				<Anchor point="CENTER" x="0" y="0"/>
			</Anchors>
		</FontString>
        <FontString inherits="GameFontNormalSmall" justifyH="CENTER" text="this turn.">
			<Anchors>
				<Anchor point="BOTTOM" x="0" y="38"/>
			</Anchors>
		</FontString>
      </Layer>
    </Layers>
    
    <Scripts>
      <OnLoad>		
		-- TODO
      </OnLoad>
    </Scripts>
  </Frame>
</Ui>
