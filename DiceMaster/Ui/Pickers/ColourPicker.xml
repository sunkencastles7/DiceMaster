<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\..\FrameXML\UI.xsd">
  
  <!-- The colour selector. -->
  <Frame name="DiceMasterColourPicker" parent="UIParent" hidden="true" inherits="ButtonFrameTemplate" frameStrata="DIALOG" enableMouse="true" movable="true" resizable="false" toplevel="true">
    <Size x="256" y="256" />
    <Anchors>
      <Anchor point="TOPRIGHT" relativeTo="DiceMasterTraitEditor" relativePoint="TOPLEFT" x="-48" y="-60" />
    </Anchors>
    
    <Layers>
    </Layers>
    
    <Scripts>
      <OnLoad>
		self.PortraitContainer.portrait:SetTexture("Interface/AddOns/DiceMaster/Texture/logo")
		self.TitleContainer.TitleText:SetText( "Colours" )
		
		self:SetClampedToScreen( true )
		self:RegisterForDrag( "LeftButton" )
		self:SetScript( "OnDragStart", self.StartMoving )
		self:SetScript( "OnDragStop", self.StopMovingOrSizing )
	
      </OnLoad>
    </Scripts>
    <Frames>
	  
	  <!-- Preset Selector -->
	  <Button name="$parentSelectPreset" parentKey="selectPreset" enableMouse="true" inherits="UIDropDownMenuTemplate">
		<Size x="150" y="22"/>
		<Anchors>
		  <Anchor point="TOPLEFT" x="42" y="-26"/> 
		</Anchors>
		<Scripts>
		  <OnLoad>
			UIDropDownMenu_Initialize( self, DiceMaster4.ColourPickerDropDown_OnLoad )
			UIDropDownMenu_SetText(self, "Select a Preset Colour") 
			UIDropDownMenu_SetWidth(self, 150, 5)
		  </OnLoad>
		</Scripts>
	  </Button>
	  
	  <ColorSelect parentKey="colourSelect" enableMouse="true" enableKeyboard="true">
		<Size x="230" y="206"/>
		<Anchors>
			<Anchor point="TOP" x="0" y="-30"/>
		</Anchors>
		<ColorWheelTexture parentKey="colourWheel">
			<Size x="128" y="128"/>
			<Anchors>
				<Anchor point="TOPLEFT" x="16" y="-48"/>
			</Anchors>
		</ColorWheelTexture>
		<ColorWheelThumbTexture file="Interface\Buttons\UI-ColorPicker-Buttons">
			<Size x="10" y="10"/>
			<TexCoords left="0" right="0.15625" top="0" bottom="0.625"/>
		</ColorWheelThumbTexture>
		<ColorValueTexture>
			<Size x="32" y="128"/>
			<Anchors>
				<Anchor point="LEFT" relativePoint="RIGHT" relativeKey="$parent.colourWheel" x="32" y="0"/>
			</Anchors>
		</ColorValueTexture>
		<ColorValueThumbTexture file="Interface\Buttons\UI-ColorPicker-Buttons">
			<Size x="48" y="14"/>
			<TexCoords left="0.25" right="1.0" top="0" bottom="0.875"/>
		</ColorValueThumbTexture>
		<Scripts>
			<OnColorSelect>
				DiceMaster4.ColourPicker_OnColourSelect( r, g, b )
			</OnColorSelect>
		</Scripts>
	  </ColorSelect>
	  
	  <EditBox parentKey="value" inherits="InputBoxTemplate">
        <Size x="140" y="8" />
        <Anchors>
          <Anchor point="BOTTOMLEFT" x="10" y="10" />
        </Anchors>
        <Scripts>
		  <OnLoad>
			self:SetAutoFocus( false )
			self:SetText( "FFFFFF" )
		  </OnLoad>
          <OnEditFocusLost>
			DiceMaster4.ColourPicker_OnTextChanged( self )
          </OnEditFocusLost>
          <OnEscapePressed function="EditBox_ClearFocus"/>
		  <OnEnterPressed function="EditBox_ClearFocus"/>
        </Scripts>
      </EditBox>
	  
	  <Button name="$parentSelectButton" inherits="UIPanelButtonTemplate" text="Select Colour">
		<Size x="100" y="22"/>
		<Anchors>
			<Anchor point="BOTTOMRIGHT" x="-6" y="4"/>
		</Anchors>
		<Scripts>
			<OnClick>
				DiceMaster4.ColourPicker_OnColourPick()
			</OnClick>
		</Scripts>
	  </Button>
      
    </Frames>
  </Frame>
</Ui>
